    <%= avatar_for current_user, 36, class: 'mr1' %>
    <%= current_user.initial_name %>
  </h1>

  <nav class="dock">
    <%= dock_item 'Home',
      'See all your organizations.',
      'home', root_path %>
    <%= dock_item 'Cards',
      'See all your cards.',
      'card', my_cards_path %>
    <%= dock_item 'Inbox',
      'See transactions awaiting receipts.',
      'notification', my_inbox_path %>
    <%= dock_item 'Settings',
      'Edit account settings.',
      'settings', my_settings_path %>
  </nav>
<% end %>

<%= form_with(model: partnered_signup, url: edit_partnered_signups_path(public_id: partnered_signup.public_id), local: true) do |form| %>

  <%= form_errors partnered_signup %>

  <h2>Your organization</h2>

  <p>
    <%= form.label :organization_name %>
    <%= form.text_field :organization_name, class: 'fit', placeholder: 'ACME Organization', value: @partnered_signup.organization_name %>
  </p>

  <h2>Your information</h2>

  <p>
    <%= form.label :owner_name %>
    <%= form.text_field :owner_name, class: 'fit', value: @partnered_signup.owner_name, placeholder: 'Fiona Hackworth' %>
  </p>

  <p>
    <%= form.label :owner_email %>
    <%= form.text_field :owner_email, class: 'fit', value: @partnered_signup.owner_email, placeholder: 'fionah@gmail.com' %>
  </p>

  <p>
    <%= form.label :owner_phone %>
    <%= form.text_field :owner_phone, class: 'fit', value: @partnered_signup.owner_phone, placeholder: '8556254225' %>
  </p>

  <p>
    <%= form.label :owner_address %>
    <%= form.text_field :owner_address, class: 'fit', placeholder: '8605 Santa Monica Blvd #86294 West Hollywood, CA 90069', value: @partnered_signup.owner_address %>
  </p>

  <p>
    <%= form.label :owner_birthdate %>
    <%= form.date_field :owner_birthdate, class: 'fit', value: @partnered_signup.owner_birthdate %>
  </p>

  <%= form.submit 'Connect' %>

<% end %>
<% title "ORGANIZATIONS" %>

<h1>ORGANIZATIONS <small><%= link_to "New Organization", event_new_admin_index_path %></small></h1>

<%= paginate @events %>

<%= form_with local: true, url: events_admin_index_path, method: :get do |form| %>
  <%= form.text_field :q, value: params[:q], style: 'vertical-align: top;' %>
  <div style='display: inline-block;'>
    <div style='display: inline; border: 1px lightgray solid; border-radius: 0.2rem; padding: 0.2rem; margin-right: 0.5rem;'>
      State: |
      <%= form.label :pending do %>
        <%= form.check_box :pending, checked: @pending %>
        Pending
      <% end %>
      |
      <%= form.label :unapproved do %>
        <%= form.check_box :unapproved, checked: @unapproved %>
        Unapproved
      <% end %>
      |
      <%= form.label :approved do %>
        <%= form.check_box :approved, checked: @approved %>
        Approved
      <% end %>
      |
      <%= form.label :rejected do %>
        <%= form.check_box :rejected, checked: @rejected %>
        Rejected
      <% end %>
    </div>
    <%= form.submit "Search" %>

    <br/>
    <%= form.label :transparent do %>
      Transparent
      <%= form.select :transparent, [['Both', 'both'], ["Not Transparent", 'not_transparent'], ['Transparent', 'transparent']], :selected => @transparent %>
    <% end %>
    |
    <%= form.label :omitted do %>
      Omitted
      <%= form.select :omitted, [['Both', 'both'], ["Not Omitted", 'not_omitted'], ['Omitted', 'omitted']], :selected => @omitted %>
    <% end %>
    |
    <%= form.label :hidden do %>
      Hidden
      <%= form.select :hidden, [['Both', 'both'], ["Not Hidden", 'not_hidden'], ['Hidden', 'hidden']], :selected => @hidden %>
    <% end %>
  </div>
  |
  <%= form.label :transparent do %>
    <%= form.check_box :transparent, checked: @transparent %>
    Transparent
  <% end %>
  |
  <%= form.label :omitted do %>
    <%= form.check_box :omitted, checked: @omitted %>
    Omitted
  <% end %>
  |
  <%= form.label :funded do %>
    Funded
    <%= form.select :funded, [["Not Funded", 'not_funded'], ['Funded', 'funded'], ['Both', 'both']], :selected => @funded %>
  <% end %>
  |
  <%= form.label :hidden do %>
    Hidden
    <%= form.select :hidden, [["Not Hidden", 'not_hidden'], ['Hidden', 'hidden'], ['Both', 'both']], :selected => @hidden %>
  <% end %>
  |

  <%= form.submit "Search" %>
<% end %>


<p><small><%= pluralize(@count, "result") %></small></p>

<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>Date</th>
      <th>Name</th>
      <th>Balance</th>
      <th>Fee</th>
      <th>Status</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @events.each do |event| %>
      <tr style="<%= "background: #ffffcc;" if event.pending? || event.unapproved? %> <%= "background: #ff8c38;" if event.omit_stats? %>">
        <td><%= event.id %></td>
        <td><%= event.created_at.strftime("%Y-%m-%d") %></td>
        <td>
          <%= link_to event_path(event) do %>
            <%= event.name.upcase %>
          <% end %>
        </td>
        <td style="<%= 'color: lightgray;' if event.balance === 0 %>">
          <%= render_money event.balance %>
        </td>
        <td>
          <%= render_percentage event.sponsorship_fee %>
        </td>
        <td>
          <%= "ðŸ¦" if event.omit_stats? %>
          <%= "ðŸ“ˆ" if event.is_public? %>
          <%= "ðŸ•µï¸â€â™‚ï¸" if event.hidden_at %>
        </td>
        <td>
          <%= link_to "Process", event_process_admin_path(event) if event.pending? || event.unapproved? %>
          <%= link_to "View", event_process_admin_path(event) unless event.pending? || event.unapproved? %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @events %>

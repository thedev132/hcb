<%# locals: (stripe_card:) %>

<% if stripe_card.stripe_status == 'inactive' %>
  <% defrost_tooltip = if policy(stripe_card).defrost?
                         "You can instantly re-freeze #{stripe_card.user == current_user ? "your" : stripe_card.user.possessive_name} card anytime"
                       else
                         "You don't have permission to defrost this card"
                       end %>
  <div class="tooltipped tooltipped--n" aria-label="<%= defrost_tooltip %>">
    <%= link_to "Defrost card",
                defrost_stripe_card_path(stripe_card),
                method: :post,
                class: "btn bg-accent",
                disabled: !policy(stripe_card).defrost? %>
  </div>

<% elsif stripe_card.stripe_status == 'active' %>
  <% freeze_tooltip = if policy(stripe_card).freeze?
                        "You can instantly defrost #{stripe_card.user == current_user ? "your" : stripe_card.user.possessive_name} card anytime"
                      else
                        "You don't have permission to freeze this card"
                      end %>
  <div class="tooltipped tooltipped--n" aria-label="<%= freeze_tooltip %>">
    <%= link_to freeze_stripe_card_path(stripe_card),
                method: :post,
                class: "btn bg-accent",
                disabled: !policy(stripe_card).freeze? do %>
      <%= inline_icon "freeze" %> Freeze card
    <% end %>

  </div>
<% end %>
